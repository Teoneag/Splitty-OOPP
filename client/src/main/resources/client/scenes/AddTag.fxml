<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client.scenes.AddTagCtrl">
  <Label fx:id="addTagLabel" styleClass="title" text="Add Tag"/>
  <Region/>
  <HBox alignment="CENTER" spacing="10.0">
    <TextField fx:id="tagNameField" promptText="Tag Name" styleClass="big-text-field">
    </TextField>
    <ColorPicker fx:id="tagColor" styleClass="big-text-field"/>
  </HBox>
  <Button fx:id="confirmButton" onAction="#addTag" styleClass="big-text-field" text="Confirm"/>
</VBox>
