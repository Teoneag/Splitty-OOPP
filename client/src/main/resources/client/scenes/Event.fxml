            <Tooltip text="click to edit title" />
          </tooltip>
        </Label>
        <TextField fx:id="titleTextField" alignment="TOP_LEFT" onAction="#titleShowLabel" onMouseDragExited="#titleShowLabel" onMouseExited="#titleShowLabel" visible="false" />
      </StackPane>
    </HBox>
    <HBox spacing="50.0">
      <VBox.margin>
        <Insets left="50.0" />
      </VBox.margin>
