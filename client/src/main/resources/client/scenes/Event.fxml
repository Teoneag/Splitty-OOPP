    <HBox spacing="20.0">
      <Button mnemonicParsing="false" onAction="#descriptionShowTextField" text="ðŸ–Š" />
      <StackPane alignment="CENTER_LEFT">
        <Label fx:id="description" alignment="TOP_LEFT" onMouseClicked="#descriptionShowTextField" text="Description that can be this long (I know this is not very long, but for now I think it's ok enough)" textOverrun="CLIP" wrapText="true">
          <tooltip>
            <Tooltip text="click to edit description" />
          </tooltip>
        </Label>
        <TextField id="descriptionTextField" fx:id="descriptionTextField" alignment="TOP_LEFT" onAction="#descriptionShowLabel" onMouseExited="#descriptionShowLabel" visible="false" />
      </StackPane>
    </HBox>
    <Label fx:id="descriptionErrorMessage" styleClass="warning">
      <VBox.margin>
        <Insets left="50.0" />
      </VBox.margin>
    </Label>
    <HBox>
      <VBox alignment="CENTER_LEFT">
        <HBox alignment="CENTER_LEFT" spacing="20.0">
          <Button onAction="#copyInviteCode" text="ðŸ“‹" />
          <Label fx:id="inviteCode" alignment="TOP_LEFT" onMouseClicked="#copyInviteCode" text="5M29S2">
            <tooltip>
              <Tooltip text="click to edit description" />
            </tooltip>
          </Label>
        </HBox>
        <Label fx:id="copiedInviteCode" alignment="TOP_LEFT" onMouseClicked="#copyInviteCode" styleClass="confirmation" text="Copied invite code âœ…" visible="false">
          <tooltip>
            <Tooltip text="click to copy invite code" />
          </tooltip>
          <opaqueInsets>
            <Insets />
          </opaqueInsets>
          <VBox.margin>
            <Insets left="50.0" />
          </VBox.margin>
        </Label>
      </VBox>
      <HBox />
      <HBox spacing="20.0" />
         <VBox>
            <children>
           <Label fx:id="createdDate" text="Created: 28.05.2028" />
           <Label fx:id="lastModifiedDate" text="Last modified: 02.02.2024" />
            </children>
         </VBox>
    </HBox>
    <Label fx:id="emailSendLabel" alignment="TOP_LEFT" onMouseClicked="#copyInviteCode" styleClass="confirmation" text="Email send to: teodor.neagoe.climber@gmail.com" visible="false">
      <tooltip>
        <Tooltip text="click to copy invite code" />
      </tooltip>
    </Label>
    <TableView fx:id="participantTable" maxWidth="300.0" onMouseClicked="#participantOnClick">
      <columns>
        <TableColumn fx:id="colParticipant" text="Participants" />
      </columns>
      <tooltip>
        <Tooltip text="Double click a participant to edit it" />
      </tooltip>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
    </TableView>
    <HBox alignment="CENTER_LEFT" spacing="100.0">
      <Button fx:id="addParticipantButton" onAction="#addParticipant" text="Add +" />
